@page
@model Cinema.Models.User
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Cinema</title>
    <style>

        body {
            background-color: #0E0B16;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
    <link rel="stylesheet" href="~/css/default.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i">
</head>
<body style="background-color: #0E0B16;">
    <div class="auf">
        <div class="container-login200">
            <div class="popup">
                @using (Html.BeginForm())
                {
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-26">
                            Welcome
                        </span>
                        <span class="login100-form-title p-b-48">
                            <i class="zmdi zmdi-font"></i>
                        </span>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email")
                            <br>
                            @Html.EditorFor(model => model.Email, new { @class = "input100" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, "Password")
                            <br>
                            @Html.EditorFor(model => model.Password, new { @class = "input100" })
                        </div>

                        <div class="container-login200-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button type="submit" value="Log In" class="login100-form-btn">
                                    Login
                                </button>
                            </div>
                        </div>
                        <div class="text-center p-t-115">
                            <span class="txt1">
                                Don’t have an account?
                            </span>
                            <a asp-controller="Home" asp-action="Registration" class="txt2">
                                Sign Up
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>



</body>
</html>