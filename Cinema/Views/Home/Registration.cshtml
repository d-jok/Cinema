                            @Html.EditorFor(model => model.Name, new { @class = "input100" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email")
                            <br>
                            @Html.EditorFor(model => model.Email, new { @type = "email" })
                        </div>

