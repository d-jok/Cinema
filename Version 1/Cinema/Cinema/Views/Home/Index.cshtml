@model Cinema.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Home - Brand</title>
    <style>

        body {
            background-color: #0E0B16;
        }
    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>

    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
    <link rel="stylesheet" href="~/css/default.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i">
</head>
<body style="background-color: #0E0B16;">
    <div class="auf">
        <nav class="navbar navbar-dark navbar-expand-lg fixed-top navbar-custom">
            <div class="container">
                <a class="navbar-brand" href="#">KINO</a>
                <button data-toggle="collapse" class="navbar-toggler" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon">
                    </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation"><a asp-action="Registration" class="nav-link">Sign Up</a></li>
                        <!--<li class="nav-item" role="presentation"><a class="nav-link" href="#signup_popup">Sign Up</a></li>-->

                        <div id="signup_popup" class="overlay">
                            <div class="container-login100">
                                <div class="popup">

                                    @using (Html.BeginForm())
                                    {
                                        <form class="login100-form validate-form">
                                            <span class="login100-form-title p-b-26">
                                                Welcome
                                            </span>
                                            <span class="login100-form-title p-b-48">
                                                <i class="zmdi zmdi-font"></i>
                                            </span>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Name, "Name")
                                                <br>
                                                @Html.EditorFor(model => model.Name, new { @class = "input100" })
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Email, "Email")
                                                <br>
                                                @Html.EditorFor(model => model.Email, new { @type = "email" })
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Password, "Password")
                                                <br>
                                                @Html.PasswordFor(model => model.Password)
                                            </div>

                                            

                                            <div class="form-group">
                                                <div class="container-login100-form-btn">
                                                    <div class="wrap-login100-form-btn">
                                                        <div class="login100-form-bgbtn"></div>
                                                        <button type="submit" value="Register" class="btn btn-default">
                                                            Register
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center p-t-115">
                                                <span class="txt1">
                                                    Already have an account?
                                                </span>
                                                <a class="txt2" href="login.html">
                                                    Login
                                                </a>
                                            </div>

                                        </form>
                                    }
                                </div>
                            </div>
                        </div>

                        <!--<li class="nav-item" role="presentation"><a class="nav-link" href="#signup_popup2">LogIn</a></li>-->
                        <li class="nav-item" role="presentation"><a asp-action="Login" class="nav-link">Sign Up</a></li>

                        <div id="signup_popup2" class="overlay">
                            <div class="container-login200">
                                <div class="popup">
                                    <form class="login100-form validate-form">
                                        <span class="login100-form-title p-b-26">
                                            Welcome
                                        </span>
                                        <span class="login100-form-title p-b-48">
                                            <i class="zmdi zmdi-font"></i>
                                        </span>
                                        <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                                            <input class="input100" type="text" name="email">
                                            <span class="focus-input100" data-placeholder="Email"></span>
                                        </div>
                                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                                            <span class="btn-show-pass">
                                                <i class="zmdi zmdi-eye"></i>
                                            </span>
                                            <input class="input100" type="password" name="pass">
                                            <span class="focus-input100" data-placeholder="Password"></span>
                                        </div>
                                        <div class="container-login200-form-btn">
                                            <div class="wrap-login100-form-btn">
                                                <div class="login100-form-bgbtn"></div>
                                                <button class="login100-form-btn">
                                                    Login
                                                </button>
                                            </div>
                                        </div>
                                        <div class="text-center p-t-115">
                                            <span class="txt1">
                                                Don’t have an account?
                                            </span>
                                            <a class="txt2" href="register.html">
                                                Sign Up
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="#">My Orders</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="headd">
            <!--Carousel Wrapper-->
            <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <div class="view">
                            <img class="d-block w-100" src="~/Screenshot_1.jpg" alt="First slide">
                            <div class="mask rgba-black-light"></div>
                        </div>
                        <div class="carousel-caption">
                            <h3 class="h3-responsive">Blade Runner 2049</h3>
                            <button type="button" class="btn">Buy ticket</button>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <!--Mask color-->
                        <div class="view">
                            <img class="d-block w-100" src="~/Screenshot_2.jpg" alt="Second slide">
                            <div class="mask rgba-black-strong"></div>
                        </div>
                        <div class="carousel-caption">
                            <h3 class="h3-responsive">Neon Demon</h3>
                            <button type="button" class="btn">Buy ticket</button>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <!--Mask color-->
                        <div class="view">
                            <img class="d-block w-100" src="~/Screenshot_3.png" alt="Third slide">
                            <div class="mask rgba-black-slight"></div>
                        </div>
                        <div class="carousel-caption">
                            <h3 class="h3-responsive">The Assassination of Jesse James</h3>
                            <button type="button" class="btn">Buy ticket</button>
                        </div>
                    </div>
                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
            <!--/.Carousel Wrapper-->
        </div>
        <div class="section-content service pvb0">
            <div class="container  pv12">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="heading text-center mb9">Your experience is gonna be exquisite.</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 ph0">
                        <h2>IMAX®</h2>
                        <p> IMAX® provides an exceptional movie experience with images of immersive size, striking clarity.</p>
                    </div>
                    <div class="col-sm-4 ph0">
                        <h2>REALD™ 3D</h2>
                        <p>RealD™ Digital 3D is the new generation of entertainment, with crisp, bright, ultra-realistic images.</p>
                    </div>
                    <div class="col-sm-4 ph0">
                        <h2>Dolby®  Laboratories</h2>
                        <p>Dolby digital provides with immersive, real life like surrounding sound experience.</p>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-sm-4 ph0">
                        <h2>Great Environment</h2>
                        <p> Comfortable soft seats with armrests.</p>
                    </div>
                    <div class="col-sm-4 ph0">
                        <h2>Entertainment Center</h2>
                        <p>So much more than just a regular cinema.</p>
                    </div>
                    <div class="col-sm-4 ph0">
                        <h2>Tasty food</h2>
                        <p>We have all the junk food you need to fill up your fat ass .</p>
                    </div>
                </div>
            </div>
        </div>
        <iframe width="100%" height="500" id="map" src="https://maps.google.com/maps?q=%D0%B2%D1%83%D0%BB%D0%B8%D1%86%D1%8F%20%D0%A3%D0%BD%D1%96%D0%B2%D0%B5%D1%80%D1%81%D0%B8%D1%82%D0%B5%D1%82%D1%81%D1%8C%D0%BA%D0%B0%2C%2010%2C%20%D0%A7%D0%B5%D1%80%D0%BD%D1%96%D0%B2%D1%86%D1%96%2C%20%D0%A7%D0%B5%D1%80%D0%BD%D1%96%D0%B2%D0%B5%D1%86%D1%8C%D0%BA%D0%B0%20%D0%BE%D0%B1%D0%BB%D0%B0%D1%81%D1%82%D1%8C%2C%2058000&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
        <footer id="footer" bgcolor="black">
            <div class="container footer-container">
                <div class="row">
                    <div class="col-md-2 col-sm-6">
                        <div class="widget">
                            <h5 class="widget-title">Menu</h5>
                            <ul class="menu">
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Coming soon</a></li>
                                <li><a href="#">Order</a></li>
                                <li><a href="#">Terms of service</a></li>
                                <li><a href="#">Pricing</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="widget">
                            <h5 class="widget-title">Address information</h5>
                            <p>
                                Universitetskaya street 10, Chernivtsi, Chernivtsi region, 58000
                            </p>
                            <p>
                                <i class="fa fa-mail"></i>KINO@mail.com
                                <br>
                                <i class="fa fa-phone"></i> + 8 800 555 3535
                            </p>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-6">
                        <div class="widget">
                            <h5 class="widget-title">Leave a message</h5>
                            <form class="contact_form transparent">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="text" class="inputValidation" name="name" placeholder="Name *">
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" class="inputValidation" name="email" placeholder="Email *">
                                    </div>
                                    <div class="col-sm-12 ">
                                        <textarea class="inputValidation" placeholder="Message *"></textarea>
                                        <button type="submit" class="button fill rectangle">Send to us</button>
                                    </div>
                                </div>
                            </form>
                            <div class="errorMessage"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sub-footer">
                <div class="container">
                    <div class="row copyright-text">
                        <div class="col-sm-12 text-center">
                            <p class="mv3 mvt0">© KINO 2019</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/bootstrap/js/bootstrap.min.js"></script>
    </div>
</body>
</html>